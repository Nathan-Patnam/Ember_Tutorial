<!-- app/templates/bands.hbs -->
<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each model as |band|}}
      <li class="rr-list-item">
        {{#link-to "bands.band.songs" band class="rr-band-link"}}
          {{band.name}}
          <span class="rr-pointer">
            {{fa-icon "angle-right"}}
          </span>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>

   <div class="rr-new-label">
        <label onclick={{action "addBand"}}>
          {{fa-icon "plus"}}
          <span class="ml1">Add new band</span>
        </label>
</div>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>